@model PagedList.IPagedList<Models.EF.Document>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh Sách Tài Liệu
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh Sách
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Detail", "Document", FormMethod.Post))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                <a class="btn btn-primary" href="/Admin/Document/Create">Thêm tài liệu</a>
                            </div>
                        </div>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tài Liệu</th>
                                <th>Miêu tả</th>
                                <th>Url</th>
                                <th>Số</th>
                                <th>Ký hiệu</th>
                                <th>Người Ký</th>
                                <th>Loại Văn Bản</th>
                                <th>Ngày Phát Hành</th>
                                <th>Ngày Có Hiệu Lực</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.Url</td>
                                    <td>@item.Number</td>
                                    <td>@item.Symbol</td>
                                    <td>@item.Signer</td>
                                    <td>@item.Type</td>
                                    <td>@item.ReleasedDate</td>
                                    <td>@item.UploadDate</td>
                                    <td>
                                        <a href="/Admin/Document/Edit/@item.ID">Edit</a>
                                        |
                                        @Ajax.ActionLink("Delete", "Delete", new AjaxOptions
                                   {
                                       Confirm = "Are you delete record?",
                                       OnComplete = "$(#'row" + item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>

