@model List<Models.EF.Document>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listNewDocument = (List<Models.EF.Document>)ViewBag.NewDocument;
}

@section FilterHead{
    @RenderPage("~/Views/Shared/_FilterDocument.cshtml")
}

@section DocumentCategory{
    <div class="header_slide">
        @{ Html.RenderAction("DocumentCategory", "Home"); }
        <div class="header_bottom_right">
            <div class="slider">
                <div class="content">
                    <div class="content_top">
                        <div class="heading">
                            <h3>Văn bản mới ban hành</h3>
                        </div>
                        <div class="see">
                            <p><a href="#">Xem tất cả</a></p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    @{
                        int count = 0;
                        foreach (var item in listNewDocument)
                        {
                            if (count % 4 == 0)
                            {
                                @:<div class="section group">
                            }
                            <div class="grid_1_of_4 images_1_of_4">
                                <a href="/chi-tiet/@item.MetaTitle-@item.ID"><img src="~/Assets/client/images/iconpdf.png" alt="@item.Description" /></a>
                                <h2>@item.Name </h2>
                                <div class="price-details">
                                    <div class="price-number">
                                        <p><span class="rupees">Lượt Xem: @item.ViewCount</span></p>
                                    </div>
                                    <div class="add-cart">
                                        <h4><a href="/chi-tiet/@item.MetaTitle-@item.ID">Xem chi tiết</a></h4>
                                    </div>
                                    <div class="clear"></div>
                                </div>

                            </div>
                            if ((count % 4 == 3) || (count == listNewDocument.Count() - 1))
                            {
                                @:</div>
                            }
                            count++;
                        }
                    }
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
}

<div class="main">

</div>